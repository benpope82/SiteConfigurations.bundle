<?xml version="1.0" encoding="UTF-8"?>
<site site="^http://htmlpreview.github.com/\?http://github.com/plexinc-plugins/NBC.bundle/blob/master/Contents/Resources/nbc.html#n?[0-9]{4,}$"
	plugin="(W|w)idget\.swf"
	agent="Mozilla/5.0 (Macintosh; Intel Mac OS X 10.8; rv:18.0) Gecko/20100101 Firefox/18.0"
	initialState="loading"
	version="9.0">

	<crop x="4" y="0" width="768" height="432" />

	<!-- Loading -->
	<state name="loading">
		<event>
			<condition>
				<frameLoaded />
			</condition>
			<action>
				<goto state="check-flash" />
			</action>
		</event>
	</state>

	<!-- Check Flash -->
	<state name="check-flash">
		<event>
			<condition>
				<javascript script="flash = navigator.plugins['Shockwave Flash'] ? 1 : 0" matches="0" />
			</condition>
			<action>
				<goto state="end" param="This plugin requires the Flash player to be installed." />
			</action>
		</event>

		<event>
			<condition>
				<javascript script="flash = navigator.plugins['Shockwave Flash'] ? 1 : 0" matches="1" />
			</condition>
			<action>
				<goto state="click-to-play" />
			</action>
		</event>
	</state>

	<!-- Click to play -->
	<state name="click-to-play">
		<event>
			<condition>
				<color x="389" y="219" rgb="666666" />
			</condition>
			<action>
				<click x="389" y="219" />
				<goto state="playing" />
			</action>
		</event>
	</state>

	<!-- PLAYING -->
	<state name="playing">
		<event>
			<condition>
				<command name="pause" />
			</condition>
			<action>
				<click x="100" y="100" />
				<goto state="paused" />
			</action>
		</event>

		<!-- Video ends -->
		<event>
			<condition>
				<url matches="getImage" />
			</condition>
			<action>
				<goto state="end" />
			</action>
		</event>
	</state>

	<!-- PAUSED -->
	<state name="paused">
		<event>
			<condition>
				<command name="play" />
			</condition>
			<action>
                <click x="100" y="100" />
				<goto state="playing" />
			</action>
		</event>
	</state>
</site>